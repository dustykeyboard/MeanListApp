extends ./parts/layout.jade

block content
	.jumbotron
		.container
			h1 MeanListApp
			p Create, share and complete your lists.
		
	.container
		.row
			.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
				form
					h2 Sign In
					.input-group
						span.input-group-addon
							span.glyphicon.glyphicon-user
						input.form-control(type="email",placeholder="your@email.com")
						span.input-group-btn
							input.btn.btn-primary(type="submit",value="Login")