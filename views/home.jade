extends ./parts/layout.jade

block content
	.jumbotron
		.container
			h1 MeanListApp
			p Create, share and complete your lists.
		
	.container
		.row
			.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
				form
					h2 Start your list
					.input-group
						span.input-group-addon
							span.glyphicon.glyphicon-plus
						input.form-control(placeholder="Add an item...")
						span.input-group-btn
							input.btn.btn-primary(type="submit",value="add")