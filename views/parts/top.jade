.container
	nav.navbar.navbar-inverse
		.navbar-header
			button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar",aria-expanded="false")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") MeanListApp
		.navbar-collapse.collapse#navbar
			case user
				when null
					p.navbar-text.navbar-right 
						a.navbar-link(href="/login") Login 
						| or 
						a.navbar-link(href="/register") Register
						
				default
					ul.nav.navbar-nav.navbar-right
						li.dropdown
							a.dropdown-toggle(href="#",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") My Lists
								span.caret
							ul.dropdown-menu
								if false
									each list in []
										li
											a(href="/lists/"+list._id)= list.title
									li.divider(role="separator")
								li
									a(href="/lists/new") Create a List
					p.navbar-text.navbar-right Hello 
						a.navbar-link(href="/logout")= user.name