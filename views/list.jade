extends ./parts/layout.jade

block content
	.container(ng-controller="ItemCtrl",ng-init="init( '"+listID+"' )")
		ol.breadcrumb
			li: a(href="/") Home
			li: a(href="/lists") My lists
			li.active {{list.title}}
		.row
			.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
				.panel.panel-default
					.panel-heading
						h1.panel-title
							a(href="/lists/"+list) {{list.title}}
					ul.list-group
						li.list-group-item(ng-repeat="item in items")
							.badge.del(ng-click="deleteItem($index)") &times;
							| {{item.title}}
					.panel-footer
						form(ng-submit="addItem()")
							.input-group
								span.input-group-addon
									span.glyphicon.glyphicon-plus
								input.form-control(ng-model="newItem.title")
								span.input-group-btn
									input.btn.btn-primary(type="submit",value="add")