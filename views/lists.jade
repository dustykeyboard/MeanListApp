extends ./parts/layout.jade

block content
	.container
		.row
			.col-md-6(id="ListCtrl",ng-controller="ListCtrl",ng-init="init( '"+user.username+"' )")
				.panel.panel-default
					.panel-heading
						h1.panel-title My Lists
					ul.list-group
						li.list-group-item(ng-repeat="list in lists")
							a(href="/lists/{{list._id}}") {{list.title}}
					.panel-footer
						form(ng-submit="addList()")
							.input-group
								span.input-group-addon
									span.glyphicon.glyphicon-plus
								input.form-control(ng-model="newList.title")
								span.input-group-btn
									input.btn.btn-primary(type="submit",value="add")
			.col-md-6(id="ItemCtrl",ng-controller="ItemCtrl")
				.panel.panel-default
					.panel-heading
						h1.panel-title
							a(href="/lists/"+list) {{list.title}}
					ul.list-group
						li.list-group-item(ng-repeat="item in items")
							.badge.del(ng-click="deleteItem($index)") &times;
							| {{item.title}}
					.panel-footer
						form(ng-submit="addItem()")
							.input-group
								span.input-group-addon
									span.glyphicon.glyphicon-plus
								input.form-control(ng-model="newItem.title")
								span.input-group-btn
									input.btn.btn-primary(type="submit",value="add")